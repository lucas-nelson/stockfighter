<form>
  <div class="form-group">
    <label for="account">Account</label>
    {{input autofocus class="form-control" type="text" value=account}}
  </div>

  <button class="btn btn-primary" type="submit" disabled={{isDisabled}} {{action 'createOrder'}}>Create</button>
</form>

{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}
